<div class='text-center'>
  <img id='theburger' src='/assets/img/theburger.jpeg'>
</div>

<div class='container'>
  <div class ="row">
    <div class='col-md-6'>
      <h2>Burgers To Eat</h2>

        <ul>
          {{#each burgers}}
            {{#unless this.devoured}}
              <li>
                {{this.burger_name}}
        
                <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
                  <input type="hidden" name="devoured" value="true">
                  <button type="submit">Eat Da Burger!</button>
                </form>
              </li>
            {{/unless}}
          {{/each}}
          </ul>

    <div class='col-md-6'>
      <h2>Create A Burger</h2>    
        <form action="burgers/create" method="POST">
          

        <div class='form-group'>
          <label for="bg">Burger Name: </label>
          <input type="text" id="bg" name="name">
        </div>

        <button type="submit">Add Da Burger!</button>
        </form>
    </div> 

<div class ='col-md-6'>
      <h2 class>Yummy!</h2>
      <ul>
        {{#each burgers}}
          {{#if this.devoured}}
            <li>
            {{this.burger_name}}
            </li>
          {{/if}}
        {{/each}}
      </ul>
    </div>       